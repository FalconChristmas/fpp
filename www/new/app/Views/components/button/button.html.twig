  Render the template code you've just created

  - Data:
    - 'label': (string)

  - Options:
    - 'modifiers': (array) []
    - 'class': (string) null
variants:
  0:
    name: 'Default'
    twig: |
      {% from 'components/button/button.html.twig' import button %}
      {{ button({
          'label': 'Text here!',
        }) }}
    styles: views/components/button/button.scss
