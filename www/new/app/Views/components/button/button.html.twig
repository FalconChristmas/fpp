{% macro button(data, options) %}
    {% set name = 'button' %}

    {% set defaults = {
        'class': null,
        'modifiers': [],
    } %}

    {% set options = merge_component_options(options, defaults) %}
    {% set class = render_classes(name, options.modifiers, options.class) %}

    {% set attrs = {
        'class': class,
        'data-action': (options.actions|merge([])|join(' ')),
    } %}

    <button {{ render_attrs(attrs) }}>
        {{ data.label|default('button') }}
    </button>
{% endmacro %}
