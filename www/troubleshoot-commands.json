{
    "CommandGroups": {
        "Networking": {
            "grpDisplayTitle": "Networking",
            "grpDescription": "Set of tools for network troubleshooting",
            "commands": {
                "Interfaces": {
                    "title": "Interfaces",
                    "description": "",
                    "cmd": "ifconfig -a",
                    "platforms": [
                        "all"
                    ]
                },
                "Wired": {
                    "title": "Wired",
                    "description": "",
                    "cmd": "for interface in $(ifconfig | grep -oP \"^\\w+(?=:)\" | grep \"eth\"); do echo \" \"; ethtool \"$interface\"; done",
                    "platforms": [
                        "all"
                    ]
                },
                "Wireless": {
                    "title": "Wireless",
                    "description": "",
                    "cmd": "iwconfig; cat /proc/net/wireless",
                    "platforms": [
                        "all"
                    ]
                },
                "Routing": {
                    "title": "Routing",
                    "description": "",
                    "cmd": "netstat -rn",
                    "platforms": [
                        "all"
                    ]
                },
                "DefaultGateway": {
                    "title": "Default Gateway",
                    "description": "",
                    "cmd": "for gateway in $(netstat -rn | grep '^0.0.0.0' | awk '{print $2};' ); do ping -c 1 $gateway; done;",
                    "platforms": [
                        "all"
                    ]
                },
                "InternetAccess": {
                    "title": "Internet Access",
                    "description": "",
                    "cmd": "curl -S -s -o /dev/null -m 2 https://github.com/FalconChristmas/fpp/blob/master/README.md 2>&1 ; if [ \"$?\" -eq \"0\" ]; then echo \"GitHub reachable: **YES**\" ; else echo \"GitHub Reachable: ** NO **\"; fi",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "Disk": {
            "grpDisplayTitle": "Disk",
            "grpDescription": "Set of tools for storage related troubleshooting",
            "commands": {
                "BlockDevices": {
                    "title": "Block Devices",
                    "description": "",
                    "cmd": "lsblk -l",
                    "platforms": [
                        "all"
                    ]
                },
                "Partitions": {
                    "title": "Partitions",
                    "description": "",
                    "cmd": "fdisk -l",
                    "platforms": [
                        "all"
                    ]
                },
                "Filesystems": {
                    "title": "Filesystems",
                    "description": "",
                    "cmd": "df -k",
                    "platforms": [
                        "all"
                    ]
                },
                "Mounts": {
                    "title": "Mounts",
                    "description": "",
                    "cmd": "mount | grep -v password",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "DateTime": {
            "grpDisplayTitle": "Date / Time",
            "grpDescription": "Set of tools for Time and Date troubleshooting",
            "commands": {
                "Date": {
                    "title": "Date",
                    "description": "",
                    "cmd": "date",
                    "platforms": [
                        "all"
                    ]
                },
                "NTPPeers": {
                    "title": "NTP Peers",
                    "description": "",
                    "cmd": "pgrep ntpd > /dev/null && ntpq -c peers",
                    "platforms": [
                        "all"
                    ]
                },
                "RTC": {
                    "title": "RTC",
                    "description": "",
                    "cmd": "hwclock -r -f \"$rtcDevice\"",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "MemoryCPU": {
            "grpDisplayTitle": "Memory / CPU",
            "grpDescription": "Set of tools for SBC troubleshooting",
            "commands": {
                "Memory": {
                    "title": "Memory",
                    "description": "",
                    "cmd": "free",
                    "platforms": [
                        "all"
                    ]
                },
                "Uptime": {
                    "title": "Uptime",
                    "description": "",
                    "cmd": "uptime",
                    "platforms": [
                        "all"
                    ]
                },
                "CPUUtilization": {
                    "title": "CPU Utilization",
                    "description": "",
                    "cmd": "top -bn1 | head -20",
                    "platforms": [
                        "all"
                    ]
                },
                "CPUInfo": {
                    "title": "CPUInfo",
                    "description": "",
                    "cmd": "cat /proc/cpuinfo",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "USB": {
            "grpDisplayTitle": "USB",
            "grpDescription": "Set of tools for USB troubleshooting",
            "commands": {
                "USBDeviceTree": {
                    "title": "USB Device Tree",
                    "description": "",
                    "cmd": "lsusb -t",
                    "platforms": [
                        "all"
                    ]
                },
                "USBDevices": {
                    "title": "USB Devices",
                    "description": "",
                    "cmd": "lsusb -v",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "Audio": {
            "grpDisplayTitle": "Audio",
            "grpDescription": "Set of tools for Audio troubleshooting",
            "commands": {
                "SoundCards": {
                    "title": "Sound Cards",
                    "description": "",
                    "cmd": "aplay -l",
                    "platforms": [
                        "all"
                    ]
                },
                "MixerDevices": {
                    "title": "Mixer Devices",
                    "description": "",
                    "cmd": "/bin/ls -1d /proc/asound/card[0-9] | sed -e \"s/.*\\/card//\" | while read ID; do echo \"CardID: ${ID}\"; sudo amixer -c ${ID} ; echo ; done",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "Midi": {
            "grpDisplayTitle": "Midi",
            "grpDescription": "Set of tools for Midi troubleshooting",
            "commands": {
                "MidiDevices": {
                    "title": "Midi Devices",
                    "description": "",
                    "cmd": "aseqdump -l",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "Video": {
            "grpDisplayTitle": "Video",
            "grpDescription": "Set of tools for Video troubleshooting",
            "commands": {
                "Video": {
                    "title": "Video",
                    "description": "",
                    "cmd": "test -e /dev/fb0 && echo \"/dev/fb0\" && fbset -s -fb /dev/fb0 ; test -e /dev/fb1 && echo \"/dev/fb1\" && fbset -s -fb /dev/fb1",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "OS": {
            "grpDisplayTitle": "OS, Kernel, and SD image",
            "grpDescription": "FPP Version Info",
            "commands": {
                "OSVersion": {
                    "title": "OS Version",
                    "description": "",
