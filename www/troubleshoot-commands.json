        "i2c": {
            "grpDisplayTitle": "i2c",
            "grpDescription": "Set of tools for I2C troubleshooting",
            "commands": {
                "i2cdetect": {
                    "title": "i2cdetect",
                    "description": "",
                    "cmd": "i2cdetect -y -r  . \"$i2cDevice\"",
                    "platforms": [
                        "all"
                    ]
                }
            }
        },
        "Processes": {
            "grpDisplayTitle": "Processes",
            "grpDescription": "Set of tools for examining running processes",
            "commands": {
