        "Git": {
            "grpDisplayTitle": "Git",
            "grpDescription": "Git source control info",
            "commands": {
                "GitSourceIP": {
                    "title": "Git Source IP",
                    "description": "",
                    "cmd": "git remote get-url origin | cut -f3 -d/;",
                    "platforms": [
                        "all"
                    ]
                },
                "GitActiveBranch": {
                    "title": "Git Active Branch",
                    "description": "",
                    "cmd": "git branch | grep \"^\\*\" | sed -e \"s/\\*\\s//\";",
                    "platforms": [
                        "all"
