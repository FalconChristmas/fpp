#!/bin/bash
#
# piRTC
#
# Setup RTC
#
#

BINDIR=$(cd $(dirname $0) && pwd)
RTCDEVICE="/dev/rtc0"

. ${BINDIR}/common
. ${BINDIR}/functions

if [ "${FPPPLATFORM}" = "Raspberry Pi" ]
then
	setupPiRTC
else
	if [ "${FPPPLATFORM}" = "BeagleBone Black" ]
	then
		setupBBBRTC
		RTCDEVICE="/dev/rtc1"
	fi
fi

#sleep and wait for things to settle after setting creating the i2c device
#without this the system date isn't changed, presumably because the RTC isn't ready
sleep 10

if [[ $1 == "set" ]]
then
  hwclock -w -f ${RTCDEVICE} &>/dev/null
else
  hwclock -s -f ${RTCDEVICE} &>/dev/null
  cp ${FPPDIR}/etc/update-RTC /etc/cron.daily/
fi

sleep 2