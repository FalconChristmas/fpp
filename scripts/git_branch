#!/bin/bash

BINDIR=$(cd $(dirname $0) && pwd)

. ${BINDIR}/common
. ${BINDIR}/functions

if [ "x$1" = "x" ]
then
	echo "USAGE: $0 BRANCHNAME"
	exit 1
fi

logOutput

echo "Stopping fppd"
${SUDO} ${FPPDIR}/scripts/fppd_stop

echo "Cleaning up any compiled binaries"
cleanCompiledBinaries

echo "Switching git branch to $1 and compiling new binaries"
if [ "x${FPPDIR}" = "x/opt/fpp" ]
then
	cd ${FPPDIR} && $SUDO git checkout $1 && $SUDO git pull && $SUDO git submodule sync && $SUDO git submodule update --init && compileBinaries
else
	cd ${FPPDIR} && sudo -u pi git checkout $1 && sudo -u pi git pull && sudo -u pi git submodule sync && sudo git submodule update --init && compileBinaries
fi

echo "Restarting fppd"
${SUDO} ${FPPDIR}/scripts/fppd_start

